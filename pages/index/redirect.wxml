<!--pages/index/redirect.wxml-->

<view class="container">
  <view class="title">
    <text>提示</text>
  </view>

  <view id='file-msg' style="display: {{style_file}};">
    <view class="tbody">
      <text>加载文件中...</text>
    </view>
  </view>

  <view id='copy-msg' style="display: {{style_copy}};">
    <view class="tbody">
      <text>因为小程序规定不能打开外部链接，所以请将链接复制并粘贴到浏览器中打开。</text>
    </view>
    <view class="turl">
      <text>{{to_paste_url}}</text>
    </view>

    <view class="bt_group">
      <button type="default" bindtap="gobackCallback" class="my_bt">返回原文</button>
      <button type="primary" bindtap="copyCallback" class="my_bt">复制网址</button>
    </view>
  </view>

</view>